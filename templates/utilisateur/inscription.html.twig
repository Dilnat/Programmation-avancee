{% extends "base.html.twig" %}
{% block page_title %}
    <title> Inscription </title>
{% endblock %}

{% block page_content %}

    <main>
        {{ form_start(formulaire, {'attr': {'class': 'center basic-form'}}) }}
        <fieldset>
            <legend>Inscription</legend>
            <div class="access-container">
                <!-- Affichage du label "Login" -->
                {{ form_label(formulaire.login, "Login") }}
                <p class="help-input-form">Entre 4 et 20 caractères</p>
                <!-- Affichage de l'input du login -->
                {{ form_widget(formulaire.login) }}
            </div>
            <div class="access-container">
                <!-- Affichage du label "Mot de passe" -->
                {{ form_label(formulaire.plainPassword, "Mot de passe") }}
                <p class="help-input-form">Entre 8 et 30 caractères, au moins une minuscule, une majuscule et un nombre</p>
                <!-- Affichage de l'input du mot de passe -->
                {{ form_widget(formulaire.plainPassword) }}
            </div>
            <div class="access-container">
                <!-- Affichage du label "Adresse mail" -->
                {{ form_label(formulaire.adresseEmail, "Adresse mail") }}
                <!-- Affichage de l'input de l'adresse email -->
                {{ form_widget(formulaire.adresseEmail) }}
            </div>
            <div class="access-container">
                <!-- Affichage du label "Photo de profil" -->
                {{ form_label(formulaire.fichierPhotoProfil, "Photo de profil") }}
                <!-- Affichage de l'input de la photo de profil (required : '', car non obligatoire...) -->
                {{ form_widget(formulaire.fichierPhotoProfil, {'required' : '', 'attr' : {'accept' : 'image/png, image/jpeg'}}) }}
            </div>
            <!-- Affichage du bouton d'envoi, contenant le texte (label) "S'inscrire" -->
            {{ form_widget(formulaire.inscription, {"S'inscrire", 'attr': {'class': 'basic-form-submit'}}) }}
        </fieldset>
        {{ form_rest(formulaire) }}
        {{ form_end(formulaire) }}
    </main>
{% endblock %}
